<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        
        <PackageId>DragulaDropula</PackageId>
        <Version>2.1.1</Version>
        <Authors>maraton</Authors>
        <Description>Library for simple Drag-And-Drop functionality in Blazor.</Description>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageTags>Dragging, Blazor, DragAndDrop, DragDrop, DragulaDropula</PackageTags>
        <RepositoryUrl>https://github.com/marat0n/DragulaDropula</RepositoryUrl>
    </PropertyGroup>

    <ItemGroup>
        <SupportedPlatform Include="browser" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.7" />
    </ItemGroup>

</Project>
